<h1>All Articles</h1>

<div id="sidebar">
  <div>
    <% @pages.each do |page| %>
      <%= link_to page.title, page_path(page) %><br />
    <% end %>
  </div>
</div>

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article) %>
    </li>
  <% end %>
</ul>

<% if logged_in? %>
  <%= link_to "Create a new article", new_article_path, class: "new_article" %>
<% end %>